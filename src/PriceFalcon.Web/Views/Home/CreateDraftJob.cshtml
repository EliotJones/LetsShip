@model PriceFalcon.Web.ViewModels.Home.CreateDraftJobViewModel

<div style="height: 80vh; display: flex; align-items: center">
    <div style="width: 100%">
        <div class="row">
            <div class="ten columns offset-by-one">
                <form asp-action="CreateDraftJobStart" asp-route-token="@ViewData["token"]">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label style="display: none" asp-for="Url" class="control-label">Website</label>
                        <input id="front-page-email" required="required" asp-for="Url"
                               type="url"
                               placeholder="Website address"
                               title="Enter the URL of the web page to monitor"
                               class="u-full-width" />
                        <span asp-validation-for="Url"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button-primary u-pull-right">Start</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}